@model IEnumerable<Stockzilla.Models.Location>
@{
    Layout = "_Layout_Signed_In";
    ViewBag.Title = "Locations - Stockzilla";
    ViewBag.Header = "Locations";
}

<script type="text/javascript" class="init">

    $(document).ready(function () {
        $('#datatbl').DataTable();
    });

</script>

<div id='SuccessMsg' class='alert alert-dismissible alert-success' @ViewBag.SuccessMsg>
    <button type='button' class='close' data-dismiss='alert'>&times;</button>
    <p>Your Location record has been saved successfully.</p>
</div>

<div>
    <input class="btn btn-success" type="submit" value="Add New" onclick="location.href='@Url.Action("Add")'" />
</div>
<hr />
<div>
    <table id="datatbl" class="table table-striped table-bordered table-hover" cellspacing="0" col-md-10 col-md-offset-1>
        <thead>
            <tr>
                <th></th>
                <th>Location</th>
                <th>Created By</th>
                <th>Created Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center" col-md-1><a class="btn btn-xs btn-info" asp-controller="Locations" asp-action="edit" asp-route-id="@item.LocationId"><span><i class="fa fa-edit"></i></span></a></td>
                    <td>@item.Name</td>
                    <td>@item.CreatedBy</td>
                    <td>@item.CreatedDate</td>
                </tr>
            }
        </tbody>
    </table>
</div>

