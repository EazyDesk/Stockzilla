@model IEnumerable<Stockzilla.Models.StockReceipt>
@{
    Layout = "_Layout_Signed_In";
    ViewBag.Title = "Stock Receipts - Stockzilla";
    ViewBag.Header = "Stock Receipts";
}

<script type="text/javascript" class="init">

    $(document).ready(function () {
        $('#datatbl').DataTable();
    });

</script>

<div id='SuccessMsg' class='alert alert-dismissible alert-success' @ViewBag.SuccessMsg>
    <button type='button' class='close' data-dismiss='alert'>&times;</button>
    <p>Your Stock record has been saved successfully.</p>
</div>

<div>
    <input class="btn btn-success" type="submit" value="Add New" onclick="location.href='@Url.Action("Add")'" />
</div>
<hr />
<div>
    <table id="datatbl" class="table table-striped table-bordered table-hover" cellspacing="0" col-md-10 col-md-offset-1>
        <thead>
            <tr>
                <th>Product Code</th>
                <th>Location</th>
                <th>Batch No.</th>
                <th>Serial No.</th>
                <th>Qty</th>
                <th>Date Received</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Product != null)
                        {
                            @item.Product.ProductCode
                        }
                    </td>
                    <td>
                        @if (item.Location != null)
                        {
                            @item.Location.Name
                        }
                    </td>
                    <td>@item.BatchNo</td>
                    <td>@item.SerialNo</td>
                    <td>@item.Qty</td>
                    <td>@item.DateReceived</td>
                </tr>
            }
        </tbody>
    </table>
</div>

