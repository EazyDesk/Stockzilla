@model IEnumerable<Stockzilla.Models.StockItem>
@{
    Layout = "_Layout_Signed_In";
    ViewBag.Title = "Stock - Stockzilla";
    ViewBag.Header = "Stock";
}

<script type="text/javascript" class="init">

    $(document).ready(function () {
        $('#datatbl').DataTable();
    });

</script>

<div id='SuccessMsg' class='alert alert-dismissible alert-success' @ViewBag.SuccessMsg>
    <button type='button' class='close' data-dismiss='alert'>&times;</button>
    <p>Your Stock record has been saved successfully.</p>
</div>

<hr />
<div>
    <table id="datatbl" class="table table-striped table-bordered table-hover" cellspacing="0" col-md-10 col-md-offset-1>
        <thead>
            <tr>
                <th></th>
                <th>GRN No.</th>  
                <th>Product Code</th>
                <th>Location</th>
                <th>Batch No.</th>
                <th>Serial No.</th>
                <th>Qty Available</th>
                <th>Date Received</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center"><a class="btn btn-xs btn-info" asp-controller="stockitems" asp-action="edit" asp-route-id="@item.StockId"><span><i class="fa fa-edit" title="Edit"></i></span></a></td>
                    <td>@item.GRNNo </td>
                    <td>
                        @if (item.Product != null)
                        {
                            @item.Product.ProductCode
                        }
                    </td>
                    <td>
                        @if (item.Location != null)
                        {
                            @item.Location.Name
                        }
                    </td>
                    <td>@item.BatchNo</td>
                    <td>@item.SerialNo</td>
                    <td>@item.QtyAvailable</td>
                    <td>@item.DateReceived</td>
                </tr>
            }
        </tbody>
    </table>
</div>

